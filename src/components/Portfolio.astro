<style lang="scss">
    @use "../styles/variables.scss";
    @use "../styles/breakpoints.scss";
    .center {
        position: fixed;
        height: 100%;
        left: 50%;
        right: 50%;
    }
    #projects {
        margin: auto;
        min-height: calc(100dvh - 4.375rem);
        @media (min-width: breakpoints.$tablets) {
            height: calc(100dvh - 4.375rem);
        }
    }
    .projects-container {
        display: grid;
        grid-template-rows: 1fr auto;
        justify-items: center;
        height: 100%;
        gap: 26px;
        padding-top: 20px;
        @media (min-width: breakpoints.$tablets) {
            margin: 0;
            display: flex;
            padding: 0px 70px;
            padding-top: 20px;
            flex-direction: column;
            align-items: flex-start;
        }
    }
    .title {
        color: variables.$primary-color;
        font-size: 32px;
        font-style: normal;
        font-weight: 900;
        line-height: normal;
        @media (min-width: breakpoints.$tablets) {
            font-size: 48px;
        }
    }
    .sub-title {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        @media (min-width: breakpoints.$tablets) {
            width: 100%;
            display: flex;
            flex-direction: row;
            align-items: center;
        }
    }
    .sub-title p {
        color: variables.$primary-color;
        /* H1 */
        font-family: Lato;
        font-size: 20px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
        @media (min-width: breakpoints.$tablets) {
            color: variables.$primary-color;
            font-size: 40px;
            font-weight: 900;
        }
    }
    @media (min-width: breakpoints.$tablets) {
        .portfolio-container {
            width: 100%;
        }
    }
</style>
