<style>
    .center {
        position: fixed;
        height: 100%;
        left: 50%;
        right: 50%;
    }
    #projects {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        height: calc(100vh - 4.375rem);
    }
    .projects-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        height: 100%;
        margin: 28px 2px 0 2px;
        gap: 26px;
    }
    .title {
        color: var(--Main, #0a929b);
        /* H1 */
        font-family: Lato;
        font-size: 32px;
        font-style: normal;
        font-weight: 900;
        line-height: normal;
    }
    .sub-title {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .sub-title p {
        color: var(--Main, #0a929b);
        /* H1 */
        font-family: Lato;
        font-size: 20px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
    }
    @media (min-width: 768px) {
        #projects {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            height: calc((100vh - 4.375rem) * 0.8);
        }
        .projects-container {
            height: 100%;
            margin-bottom: 100px;
            display: flex;
            width: auto;
            padding: 0px 70px;
            flex-direction: column;
            align-items: flex-start;
        }
        .title {
            font-size: 48px;
        }
        .sub-title {
            width: 100%;
            display: flex;
            flex-direction: row;
            align-items: center;
        }
        .sub-title p {
            color: var(--Main, #0a929b);
            font-family: Lato;
            font-size: 40px;
            font-style: normal;
            font-weight: 900;
            line-height: normal;
        }
        .portfolio-container {
            width: 100%;
        }
    }
</style>
