--- 
type project = {
    title: string,
    description: string,
    image?: string,
    link?: string,
    tags?: string[]
}
const {project: project} = Astro.props; 
--- 
<div class="card-container">
    <Checkitout/>
    <img src={project.image}/>
    <h1 class="title">{project.title}</h1>
    <p class="description">{project.description}</p>
    <div class="links">
        <a href="">Code</a>
        <a href="">Live DEMO</a>
    </div>
</div>

<style>
    .card-container {
        padding: 2rem;
        display: flex; 
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .title {
        font-size: 2rem;
        font-weight: bold;
    }
    @media (min-width: 768px) {
    }
</style>