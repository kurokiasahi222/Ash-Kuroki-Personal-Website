---
import { Image } from "astro:assets";
import sample from "../../public/images/project-sample.png";
type project = {
  title: string;
  description: string;
  image?: string;
  link?: string;
  tags?: string[];
};
const { project: project } = Astro.props;
const { index: index } = Astro.props;
---

<div class="card-container">
  <div class="image-container">
    <Image src={sample} alt="project image" height="285" />
  </div>
  <div class="card">
    <div class="card-information">
      <h1 class="title">{project.title}</h1>
      <p class="description">{project.description}</p>
    </div>
    <div>tags</div>
  </div>
</div>

<style>
  .card-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 65px;
  }
  .card {
    display: flex;
  }
  .card-information {
    width: 50%;
  }
  .title {
    font-size: 2rem;
    font-weight: bold;
  }
  @media (min-width: breakpoints.$tablets) {
  }
</style>
