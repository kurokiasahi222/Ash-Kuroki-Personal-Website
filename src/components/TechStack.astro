      />
      <Image
        
        class="icon"
        src={flask}
        alt="flask-icon"
        width="80"
        height="80"
      />
      <Image
        
        class="icon"
        src={java}
        alt="java-icon"
        width="60"
        height="80"
      />
      <Image
        
        class="icon"
        src={c}
        alt="c-icon"
        width="70"
        height="80"
      />
      <Image
        
        class="icon"
        src={react}
        alt="react-icon"
        width="70"
        height="80"
      />
      <Image
        
        class="icon"
        src={ts}
        alt="typescript-icon"
        width="70"
        height="80"
      />
      <Image
        
        class="icon"
        src={python}
        alt="python-icon"
        width="80"
        height="100"
      />
      <Image
        
        class="icon"
        src={js}
        alt="javascript-icon"
        width="70"
        height="80"
      />
    </div>
    <div aria-hidden="true" class="icons">
      <Image
        
        class="icon"
        src={sql}
        alt="sql-icon"
        width="80"
        height="80"
      />
      <Image
        
        class="icon"
        src={flask}
        alt="flask-icon"
        width="80"
        height="80"
      />
      <Image
        
        class="icon"
        src={java}
        alt="java-icon"
        width="60"
        height="80"
      />
      <Image
        
        class="icon"
        src={c}
        alt="c-icon"
        width="70"
        height="80"
      />
      <Image
        
        class="icon"
        src={react}
        alt="react-icon"
        width="70"
        height="80"
      />
      <Image
        
        class="icon"
        src={ts}
        alt="typescript-icon"
        width="70"
        height="80"
      />
      <Image
        
        class="icon"
        src={python}
        alt="python-icon"
        width="80"
        height="100"
      />
      <Image
        
        class="icon"
        src={js}
        alt="javascript-icon"
        width="70"
        height="80"
      />
    </div>
  </div>
</div>

<style lang="scss">
  @use "../styles/variables.scss" as variables;
  @use "../styles/breakpoints.scss" as breakpoints;
  .techStackContainer {
    margin-top: 2rem;
    @media (min-width: breakpoints.$tablets) {
      margin-top: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      gap: 5px;
      padding: 20px;
    }
  }
  .marqueeContainer {
    --gapPhone: 2.5rem;
    --gapTablets: 1rem;
    position: relative;
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gapPhone);
    margin-top: var(--gapPhone);
    /* Pause on hover */
    &:hover {
      .icons {
        animation-play-state: paused;
      }
    }
    @media (min-width: breakpoints.$tablets) {
      gap: var(--gapTablets);
    }
  }
  .title {
    color: variables.$primary-color;
    text-align: center;
    font-size: 26px;
    font-weight: 700;
    @media (min-width: breakpoints.$tablets) {
      font-size: 32px;
    }
  }
  .icons {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: var(--gapPhone);
    min-width: 100%;
    animation: scrollPhone 10s linear infinite;
    @media (min-width: breakpoints.$tablets) {
      animation: scrollTablets 10s linear infinite;
      gap: var(--gapTablets);
    }
    /* Pause animation when reduced-motion is set */
    @media (prefers-reduced-motion: reduce) {
      animation-play-state: paused !important;
    }
  }
  /* Marquee Animation citation */
  /* https://ryanmulligan.dev/blog/css-marquee/ */
  @keyframes scrollPhone {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - var(--gapPhone)));
    }
  }
  @keyframes scrollTablets {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - var(--gapTablets)));
    }
  }
</style>
