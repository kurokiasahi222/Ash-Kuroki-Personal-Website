---
import Header from "../components/Header.astro";
import Home from "../components/Home";
import Portfolio from "../components/Portfolio.astro";
import AboutMe from "../components/AboutMe.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="../../favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="../../favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="../../favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="../../favicon/site.webmanifest" />
    <link
      rel="mask-icon"
      href="../../favicon/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content='gf"#ffffff"' />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- import fullPage.js. Link: https://alvarotrigo.com/fullPage/
		<link
			rel="stylesheet"
			type="text/css"
			href="../../node_modules/fullpage.js/dist/fullpage.css"
		/>
		<script
			type="text/javascript"
			src="../../node_modules/fullpage.js/dist/fullpage.js"></script>
		<--script to initialize fullPage.js -->
    <!-- <script src="./script.js"></script> -->
    <!-- import fonts from google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="header">
      <Header />
    </div>
    <div id="home" class="section">
      <Home client:load />
    </div>
    <div id="about" class="section">
      <AboutMe />
    </div>
    <div id="projects" class="section">
      <Portfolio />
    </div>
    <div id="footer" class="section">
      <Footer />
    </div>
  </body>
</html>

<style>
  html,
  body {
    height: 100%;
    width: 100%; /* or a fixed width */
  }
  #header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
  }
  /* Fix for preventing sticky headers problem:  */
  /* https://gomakethings.com/how-to-prevent-anchor-links-from-scrolling-behind-a-sticky-header-with-one-line-of-css/ */
  .section {
    scroll-margin-top: 4rem;
  }
  /* ["#f9f9f9", "#E6F3F4", "#f9f9f9", */
  #home {
    background-color: #f9f9f9;
  }
  #about {
    background-color: #e6f3f4;
  }
  #projects {
    background-color: #f9f9f9;
  }
  #footer {
    background-color: #e6f3f4;
    padding-top: 0 !important;
  }
</style>
